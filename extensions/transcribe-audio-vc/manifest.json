{
  "manifest_version": 3,
  "name": "Chatwoot Audio Transcriber",
  "version": "1.0.0",
  "description": "Transcreve automaticamente Ã¡udios do Chatwoot usando Groq AI",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.chatwoot.com/*",
    "https://*.chatwoot.app/*",
    "https://*.chatwoot.cloud/*",
    "http://localhost:*/*",
    "https://api.groq.com/*",
    "https://teste.dizelequefez.com.br/*",
    "https://chatwoot.dizelequefez.com.br/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.chatwoot.com/*",
        "https://*.chatwoot.app/*",
        "https://*.chatwoot.cloud/*",
        "http://localhost:*/*",
        "https://teste.dizelequefez.com.br/*",
        "https://chatwoot.dizelequefez.com.br/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}